{
  "expo": {
    "name": "Savor - Food Waste Reduction",
    "slug": "savor-food-waste",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "savor",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Join Savor in the fight against food waste! Discover nearby restaurants offering surplus food at discounted prices. Save money while helping the environment.",
    "ios": {
      "bundleIdentifier": "com.savor.foodwaste",
      "supportsTablet": true,
      "buildNumber": "1"
    },
    "android": {
      "package": "com.savor.foodwaste",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-facebook"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "facebookScheme": "fb1224771151917446",
    "facebookAppId": "1224771151917446",
    "facebookDisplayName": "Savor",
    "facebookAutoLogAppEventsEnabled": false,
    "facebookAdvertiserIDCollectionEnabled": false,
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
